    "axios": "^0.16.2",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.16.1",
    "express-handlebars": "^3.0.0",
    "mongoose": "^5.0.11"
  }
